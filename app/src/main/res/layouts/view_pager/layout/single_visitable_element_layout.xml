<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.example.madguidesapp.android.customViews.IconButton
        android:id="@+id/showOnMapsImgBtn"
        android:layout_width="@dimen/single_element_icons"
        android:layout_height="@dimen/single_element_icons"
        android:layout_marginEnd="@dimen/single_element_icons_right_margin"
        android:adjustViewBounds="false"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/show_on_maps_icon" />

    <com.example.madguidesapp.android.customViews.IconButton
        android:id="@+id/toggleResourceVisitedImgBtn"
        android:layout_width="@dimen/single_element_icons"
        android:layout_height="@dimen/single_element_icons"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/single_element_icons_right_margin"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showOnMapsImgBtn"
        app:performsAsync="true"
        app:srcCompat="@drawable/eye_icon" />

    <com.example.madguidesapp.android.customViews.IconButton
        android:id="@+id/referencesBtn"
        android:layout_width="@dimen/single_element_icons"
        android:layout_height="@dimen/single_element_icons"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleResourceVisitedImgBtn"
        app:performsAsync="true"
        app:srcCompat="@drawable/reference_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>