<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="always"
    tools:context=".ui.mainMenu.information.InformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/aboutUsLblTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Acerca de MadGuidesApp" />

            <TextView
                android:id="@+id/aboutUsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bueno pues somos un grupo de chavales que yo que se tampoco voy a gastar tiempo ahora en esto pero pues la aplicación está chula y que se yo si ya ves esto es que la has descargado así que gracias crack jaja"
                android:visibility="visible" />

            <TextView
                android:id="@+id/contributorsLblTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="¿Quienes somos?"
                android:visibility="visible" />

            <TextView
                android:id="@+id/contributorsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Daniel Suárez - Programador\nMarta Pozo - puesto\nLeon apellido - puesto\nIrene apellido - puesto"
                android:visibility="visible" />

            <TextView
                android:id="@+id/buyMeACoffeeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Si encuentras la aplicación útil puedes invitarnos a un café para apoyar la iniciativa! :)"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/buyMeACoffeeImageView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/buymeacoffee_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/privatyPoliticsLblTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Politicas de privacidad"
                android:visibility="visible" />

            <TextView
                android:id="@+id/privacyPoliticsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:overScrollMode="always"
                android:text="Es recomendable que una política de privacidad incluya las siguientes informaciones:      Motivos y finalidades del procesamiento de datos en una página web.     Nombre y datos de contacto del responsable del sitio así como del responsable de protección de datos.     Legitimación legal para el procesamiento de datos.     Receptores de los datos.     Periodo de tiempo durante el que los datos van a permanecer almacenados.     Intención de facilitar los datos a terceras partes, incluso en otro país.     Derecho a la información y/o eliminación de los datos.     Derecho de apelación ante la autoridad competente en materia de protección de datos. "
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>